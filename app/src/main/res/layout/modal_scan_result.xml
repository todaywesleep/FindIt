<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/padding_default"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/modal_scan_result_preview"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/modal_scan_result_preview"
            android:orientation="vertical"
            android:id="@+id/modal_scan_result_pic_info"
            android:paddingTop="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </LinearLayout>

    <Button android:text="@string/modal_scan_result_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/modal_scan_result_pic_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/modal_scan_result_dismiss"/>
</androidx.constraintlayout.widget.ConstraintLayout>