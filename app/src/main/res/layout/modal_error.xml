<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/padding_default">
	
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/modal_error_title"
			android:textStyle="bold"
			android:textSize="@dimen/modal_title"
			android:text="@string/modal_error_title"
			android:textColor="@color/color_text_dark"/>
	
	<TextView
			app:layout_constraintTop_toBottomOf="@id/modal_error_title"
			android:id="@+id/modal_error_text"
			android:layout_marginTop="@dimen/padding_small"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/color_text_dark"/>
	
	<com.google.android.material.button.MaterialButton
			android:id="@+id/modal_error_confirm_button"
			style="@style/Widget.MaterialComponents.Button.TextButton"
			app:layout_constraintTop_toBottomOf="@id/modal_error_text"
			app:layout_constraintEnd_toEndOf="parent"
			android:text="@string/modal_error_confirm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>