<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/item_quest_background"
		android:layout_margin="@dimen/padding_default"
		android:padding="@dimen/padding_default">
	
	<TextView
			android:textColor="@color/color_text_light"
			android:id="@+id/fragment_quests_item_quest_title"
			android:textAlignment="center"
			android:textSize="@dimen/card_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	
	<TextView
			app:layout_constraintTop_toBottomOf="@id/fragment_quests_item_quest_title"
			android:textColor="@color/color_text_light"
			android:id="@+id/fragment_quests_item_quest_reward"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>